{% extends '/dashboard/base.html.twig' %}

{% block title %}Page d'admin des campagnes{% endblock %}

{% block body %}
	<section class="admin_vote">
		<div>
			<h1>Administration de la campagne : {{ campaign.name }}</h1>

			<div class="mb-3">
				<h2>Les collèges de votes</h2>
				<a class="btn btn-primary my-5" href="#">Ajouter un collège</a>
				<a class="btn btn-primary my-5" href="#">Gerer les collèges</a>

			</div>

			<div class="mb-3">
				<h2>Les votants</h2>
				<a class="btn btn-primary my-5" href="{{ path('campaign_voter_new', {'uuid': campaign.uuid}) }}">Ajouter un votant</a>
				<a class="btn btn-primary my-5" href="#">Ajouter des votants</a>
				<a class="btn btn-primary my-5" href="#">Gerer les votants</a>
			</div>

			<div class="mb-3">
				<h2>Les résolutions à voter</h2>
				<a class="btn btn-primary my-5" href="#">Ajouter une résolution</a>
				<a class="btn btn-primary my-5" href="#">Gerer les sésolutions</a>
			</div>

			<div class="mb-3">
				<h2>Le vote</h2>
				<a class="btn btn-primary my-5" href="#">Ajouter le vote</a>
				<a class="btn btn-primary my-5" href="#">Désactiver le vote</a>
				<a class="btn btn-primary my-5" href="#">Consulter les Résultats</a>
			</div>
		</div>
	</section>
{% endblock %}
