{% extends 'layout/column-center-shadow.html.twig' %}

{% block title %}Page d'enregistrement{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="p-4">
        <h1>Inscription</h1>
            <div class="mb-5 mt-4">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.lastname, {label: 'Nom'})}}
                {{ form_row(registrationForm.firstname, {label: 'Prénom'})}}
                {{ form_row(registrationForm.email, {label: 'Mél'}) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {label: 'J\'ai lu et j\'accepte les CGU'}) }}
            </div>
            <button class="btn btn-primary btn-lg" type="submit">S'inscrire</button>
            <div class="mt-3">
                <a href="{{ path('login') }}">Vous avez déjà un compte ? C'est ici</a>
            </div>
        {{ form_end(registrationForm) }}
    <div class="p-4">
{% endblock %}
