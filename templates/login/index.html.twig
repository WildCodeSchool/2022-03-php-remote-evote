{% extends 'layout/column-center-shadow.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="p-4">
        <h1>Connexion</h1>
        <form action="{{ path('login') }}" method="post">
            <div class="mb-3 mt-4">
                <label class="form-label" for="username">Mél:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Mot de passe:</label>
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="hidden" name="_target_path" value="{{ path('welcome_index') }}"/>
            <label>
            <input class="mb-5" type="checkbox" name="_remember_me" checked/>
            Garder ma session ouverte sur cet ordinateur
            </label><br/>
            <button class="btn btn-primary btn-lg mb-3" type="submit">Se connecter</button><br/>
            <a href="{{ path('app_register') }}" class="mb-3">Pour créer un compte cliquer ici</a>
            <div>
                <a href="{{ path('app_forgot_password_request')}}">Mot de passe oublié</a>
            </div>
        </form>
    </div>
{% endblock %}
